<%- include ('header') %>
  <style>
    p {
      hyphens: auto;
      overflow-wrap: break-word;
      width: 100%;

    }

    .col-md-4 {
      text-align: center;
    }

    .image-align-left {
      float: left;
    }

    .image-align-right {
      float: right;
    }

    #image {
      margin-right: 20px;
      margin-bottom: 0px;
    }

    #resume {
      text-align: justify;
    }

    .float-content:before,
    .float-content:after {
      content: "";
      display: block;
      clear: both;
    }
    .border {
      overflow: hidden;
    }
  </style>


  <div class="container my-5">
    <div class="row">
      <div class="col-md-12 mx-auto text-center">
        <h1 id="titre" class="display-4 mb-4 text-justify"></h1>
      </div>
    </div>
    <div class="row d-flex align-items-center justify-content-center">
      <div class="mx-auto">
        <div class="border p-3 w-100 bg-light">
          <img id="image" class="img-fluid rounded mb-4 image-align-left" />
          <div class="text-muted">
            <div id="dateNaissance"></div>
            <div id="conjointDiv"><a id="conjoint"></a></div>
            <div id="birthPlaceValue"></div>
          </div>
          <p id="image-chargement" class="text-muted text-center"></p>
          <p id="resume" class="mb-4 text-justify">
          </p>
        </div>
      </div>
    </div>
    
    <div class="col-md-4 mx-auto">
      <a id="pageWikipedia" class="btn btn-primary mx-auto mt-4" style="display: none;" target="_blank">More on
        Wikipedia</a>
    </div>

    <h3 id="titleTableStudent" class="mt-5 text-center text-primary" style="display: none;">PhD students</h3>

    <div id="tableauStudents" class="encadre-details-sur-scientist" style="display: none">
      <div id="students" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-sm-2 row-cols-xl-5 g-4">
      </div>
    </div>

    <h3 id="titleTableDiscipline" class="mt-5 text-center text-primary" style="display: none;">Academic disciplines</h3>

    <div id="tableauDisciplines" class="encadre-details-sur-scientist" style="display: none">
      <div id="disciplines" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-sm-2 row-cols-xl-5 g-4">

      </div>
    </div>

    <h3 id="titleTableConcepts" class="mt-5 text-center text-primary" style="display: none;">Concepts related</h3>

    <div id="tableauConcepts" class="encadre-details-sur-scientist" style="display: none">
      <div id="concepts" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-sm-2 row-cols-xl-5 g-4">

      </div>
    </div>

    <h3 id="titleTableAwards" class="mt-5 text-center text-primary" style="display: none;">Awards</h3>

    <div id="tableauAwards" class="encadre-details-sur-scientist" style="display: none">
      <div id="awards" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-sm-2 row-cols-xl-5 g-4">
      </div>
    </div>


    <h3 id="genetree_title" class="mt-5 text-center text-primary" style="display: none;">Doctoral Students tree</h3>
    <div class="tree" id="genetree" style="height: 100vh;">
      <ul>
      </ul>
    </div>
  </div>

 
  </div>
