<%- include ('header') %>
  <style>
    p {
      hyphens: auto;
      overflow-wrap: break-word;
      width: 100%;

    }

    .col-md-4 {
      text-align: center;
    }

    .image-align-left {
      float: left;
    }

    .image-align-right {
      float: right;
    }

    #image {
      margin-right: 20px;
      margin-bottom: 0px;
    }

    #resume {
      text-align: justify;
    }

    .float-content:before,
